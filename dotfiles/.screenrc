shelltitle $HOST
startup_message off
vbell off
hardstatus on
hardstatus alwayslastline
altscreen on # restore window contents after "vim", etc.
ignorecase on # for searches
defwrap off # screen's word wrap is not what you want
defmonitor on

#put buffer contents in os x clipboard
bind b eval "writebuf" "exec sh -c 'pbcopy < /tmp/screen-exchange'"


term xterm-256color
#hardstatus string "%{.bW}%-w%{.rW}%n %t%{-}% w %=%{..G} %H %{..Y} %m/%d %C%a "

hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{y} %l %{c}%m/%d/%y %{W}%c %{g}]'
#hardstatus string '%{= kg}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{=b kR}(%{W}%n*%f %t%?(%u)%?%{=b kR})%{= kw}%?% Lw%?%?%= %{g}]%{=b C}[ %d %M %c ]%{W}'

shell /bin/zsh

#screen -t ~ 0 su -

screen -t zsh 0 vim
screen -t zsh 1
screen -t zsh 2
screen -t zsh 3
screen -t zsh 7
screen -t zsh 8
screen -t zsh 9

#defscrollback 8192
defscrollback 100000
utf8 on
nonblock on
defnonblock on

multiuser on
acladd pair

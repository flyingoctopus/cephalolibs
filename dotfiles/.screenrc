shelltitle $HOST
startup_message off
vbell off
hardstatus on
hardstatus alwayslastline
altscreen on # restore window contents after "vim", etc.
ignorecase on # for searches
defwrap off # screen's word wrap is not what you want
defmonitor on

#put buffer contents in os x clipboard
bind b eval "writebuf" "exec sh -c 'pbcopy < /tmp/screen-exchange'"


#terminfo and termcap for nice 256 color terminal
# allow bold colors - necessary for some reason
attrcolor b ".I"
# tell screen how to set colors. AB = background, AF=foreground
# the first two are for other terminal emulators, just in case.
termcapinfo xterm "Co#256:AB=E[48;5;%dm:AF=E[38;5;%dm"
termcapinfo xterm*|rxvt*|kterm*|Eterm* 'hs:ts=\E]0;:fs=\007:ds=\E]0;\007'
termcapinfo xterm-color "Co#256:AB=E[48;5;%dm:AF=E[38;5;%dm"
#termcapinfo xterm-256color "Co#256:AB=E[48;5;%dm:AF=E[38;5;%dm"
term xterm-256color
# erase background with current bg color
defbce "on"


#hardstatus string "%{.bW}%-w%{.rW}%n %t%{-}% w %=%{..G} %H %{..Y} %m/%d %C%a "

hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{y} %l %{c}%m/%d/%y %{W}%c %{g}]'
#hardstatus string '%{= kg}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{=b kR}(%{W}%n*%f %t%?(%u)%?%{=b kR})%{= kw}%?% Lw%?%?%= %{g}]%{=b C}[ %d %M %c ]%{W}'

shell /bin/zsh

#screen -t ~ 0 su -

screen -t zsh 0 #vim
screen -t zsh 1
screen -t zsh 2
screen -t zsh 3
screen -t zsh 7
screen -t zsh 8
screen -t zsh 9

#defscrollback 8192
defscrollback 9999999
scrollback 9999999
utf8 on
nonblock on
defnonblock on

multiuser on
acladd pair
